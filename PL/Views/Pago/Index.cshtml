    <div class="container py-3">
        <header>
            <div class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom"></div>

            <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
                <h1 class="display-4 fw-normal">Precios</h1>
                <p class="fs-5 text-muted">
                    Consulta nuestros planes más eficaces. Puedes elegir según tu presupuesto.
                </p>
            </div>
        </header>

        <main>
            <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
                @foreach (ML.Membresia membresia in Model.Membresias)
                {
                    <div class="col">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-header py-3">
                                <h4 class="my-0 fw-normal">@membresia.Nombre</h4>
                            </div>
                            <div class="card-body">
                                <h1 class="card-title pricing-card-title">
                                    @membresia.Precio<small class="text-muted fw-light">/mx</small>
                                </h1>
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li>Huele a Limon UwU</li>
                                    <li>2 GB of storage</li>
                                    <li>No Email support</li>
                                    <li>No Help Center</li>
                                </ul>
                                @*<button type="button"
                                        class="w-100 btn btn-lg btn-outline-danger">
                                    Comenzar
                                </button>*@
                                <div class="d-flex flex-row">
                                    <a  class="w-100 btn btn-lg btn-outline-danger" href="@Url.Action("AddCart", "Pago", new { IdMembresia = membresia.IdMembresia })">Comenzar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
