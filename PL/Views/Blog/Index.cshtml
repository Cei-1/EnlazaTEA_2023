@model ML.Blog

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Blog</h2>

@if (Model.Blogs.Count > 0)
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (ML.Blog blog in Model.Blogs)
        {
            <div class="col">
                <div class="card h-100">
                    @if (blog.Imagen != null)
                    {
                        <img src="data:image/jpg;base64,@Convert.ToBase64String(blog.Imagen)" class="card-img-top" alt="..." />
                    }
                    else
                    {
                        <img id="imgProducto" src="~/Content/Images/bg-inicio-1.jpg" class="card-img-top" alt="..." />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@blog.Titulo</h5>
                        <p class="card-text">@blog.Nombre</p>
                        <a class="btn btn-primary" href="@Url.Action("GetArticuloById", "Blog", new { IdBlog = blog.IdBlog })">Leer Más</a>

                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">No existen registros.</div>
}