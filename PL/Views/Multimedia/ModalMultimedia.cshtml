<div class="modal fade" id="modalValidacion" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title "><strong>@ViewBag.Titulo</strong></h3>
            </div>
            <div class="modal-body">

                @*<div class="row">

                        <div class="col-md-12 text-center">
                            @if (!string.IsNullOrEmpty(ViewBag.Imagen))
                            {
                                <img src="@ViewBag.Imagen" class="img-fluid rounded" alt="Imagen del Artículo" style="width: 300px; height: 250px;">
                            }
                            else
                            {
                                <img src="~/Content/Images/default-image.jpg" class="img-fluid rounded" alt="Imagen por defecto" style="width: 200px; height: 200px;">
                            }
                        </div>
                    </div>*@
                <div class="row">
                    <div class="col-md-12 text-center">

                        <p class="lead">@ViewBag.Descripcion</p>

                        @if (!string.IsNullOrEmpty(ViewBag.VideoID) && ViewBag.VideoID != "false")
                        {
                            <iframe width="560" height="315" src="https://www.youtube.com/embed/@ViewBag.VideoID" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                        }
                        else
                        {
                            <audio controls>
                                <source src="@ViewBag.Audio" type="audio/mpeg">
                                Tu navegador no soporta la reproducción de audio.
                            </audio>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <hr>

                        <h3>@ViewBag.Nombre</h3>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Regresar", "Index", "Multimedia", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>

<script>
    $('#modalValidacion').modal('show');
</script>
